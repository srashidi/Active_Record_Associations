<h1>Create a new event</h1>

<%= form_for(@event) do |f| %>

	<%= f.label :title %>
	<%= f.text_field :title, class: 'form-control' %>

	<%= f.label :date %>
	<%= f.datetime_field :date, class: 'form-control' %>

	<%= f.label :description %>
	<%= f.text_area :description, class: 'form-control' %>

	<%= f.submit "Create event", class: "btn btn-primary" %>
<% end %>